package com.teste.neliogodoi.fullstack.controller;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.teste.neliogodoi.fullstack.model.Debt;
import com.teste.neliogodoi.fullstack.repository.DividaRepository;

@Service
@RestController("divida")
public class DebtController {
	
	@Autowired
	private DividaRepository repository;
	
	public DebtController(){}
	
	@PostMapping("nova")
	public ResponseEntity postDivida(@RequestBody Debt divida) {
		this.repository.save(divida);
		return ResponseEntity.noContent().build();
	}
	
	@GetMapping("{id}")
	public ResponseEntity<Debt> getDivida(@PathVariable String id) {
		Optional<Debt> divida = this.repository.findById(id);
		if(divida.isPresent())
			return ResponseEntity.ok(divida.get());
		else
			return ResponseEntity.notFound().build();
	}
	
	@GetMapping("user/{id}")
	public ResponseEntity<List<Debt>> getAllDividasByUser(@PathVariable Long id) {
		List<Debt> dividas = this.repository.findDividaByIdUser(id);
		if(dividas != null)
			return ResponseEntity.ok(dividas);
		else
			return ResponseEntity.notFound().build();
	}
	
	@PutMapping("{id}")
	public ResponseEntity putDivida(@PathVariable String id, @RequestBody Debt divida) {
		Optional<Debt> dividaSalva = this.repository.findById(id);
		if(dividaSalva.isPresent()) {
			divida.setId(id);
			this.repository.save(divida);
			return ResponseEntity.noContent().build();
		} else
			return ResponseEntity.notFound().build();
	}
	
	@DeleteMapping("{id}")
	public ResponseEntity<Debt> deleteDivida(@PathVariable String id) {
		Optional<Debt> divida = this.repository.findById(id);
		if(divida.isPresent()) {
			this.repository.deleteById(id);
			return ResponseEntity.noContent().build();
		} else
			return ResponseEntity.notFound().build();
	}

}
